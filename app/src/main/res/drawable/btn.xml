<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:background="#90EE90"/> <!-- Светло-зеленый при нажатии -->
            <corners android:radius="24dp"/> <!-- Радиус округления -->
            <stroke android:width="3dp" android:color="#505050"/> <!-- Цвет обводки и толщина (3dp как пример) -->
        </shape>
    </item>

</selector>